generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model User {
  id String @id @default(uuid())
  email String @unique
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  username String?
  posts Post[]
}

model Post {
  postId String @id @default(uuid())
  authorId String
  author User @relation(fields: [authorId], references: [id]) //this author refers to the User and its schema we just defined above

  title String @unique
  content String 
  description String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  //add slug (this will be the category filter, eg : DeFi)
  slug String @default("uncategorized")


}